<div class="breeding-bg-control">
    <div class="breeding-control">
        <div class="breeding-control-container">
            <input @onfocus="searchIconHide" @onfocusout="searchIconShow" class="breeding-search"
                placeholder="@((visible ? "Here search string" : ""))">
            <div class="noselect breeding-search-arrow">
                @if (arrowHover)
                {
                    <div class="breding-mask-arrow"></div>
                }
            </div>
            <div class="noselect bredding-search-btn-area">
                <a class="breeding-search-button" @onmouseover="onMouseOverSearchButton"
                    @onmouseout="onMouseOutSearchButton">search</a>
            </div>
        </div>
        <div class="breeding-category-container">
            <div class="link-container"><a class="breeding-category-link">All</a></div>
            <div class="link-container"><a class="breeding-category-link">Category 1</a></div>
            <div class="link-container"><a class="breeding-category-link">Category 2</a></div>
            <div class="link-container"><a class="breeding-category-link">Category 3</a></div>
        </div>
    </div>
</div>

<div class="breeding-card-container">
    <div class="breeding-content">
        <div class="breeding-card"></div>
        <div class="breeding-card"></div>
        <div class="breeding-card"></div>
        <div class="breeding-card"></div>
        <div class="breeding-card"></div>
        <div class="breeding-card"></div>
        <div class="breeding-card"></div>
        <div class="breeding-card"></div>
        <div class="breeding-card"></div>
    </div>
    <a class="noselect load-more-link">Load More</a>
</div>

@code {
    private bool arrowHover = false;
    private bool visible = true;

    private void onMouseOverSearchButton() => arrowHover = true;

    private void onMouseOutSearchButton() => arrowHover = false;

    private void searchIconHide() => visible = false;

    private void searchIconShow() => visible = true;
}